@model employment_bureau.Models.HomeIndexModel

@Scripts.Render("~/bundles/slideBox_script")
@Scripts.Render("~/bundles/homeindexscript")
<div class="wrap clearfix">
    <div class="main clearfix">
        <div class="content clearfix">
            <div class="announce">
                <div class="an-tit">
                    <img src="~/img/icon/annouce.png" /><span>最新公告</span>
                </div>
                <div class="an-date">
                    <span>@DateTime.Now.ToString("yyyy.MM.dd")</span>
                    <span>@ViewBag.Week</span>
                </div>
            </div>
            <a class="syslink t" href="@Url.Action("Login", "College")" target="_blank">
                <img src="~/img/icon/collegeSysIcon.png" />2018大学实习报名</a>
            <div class="announce-cont">
                <h2>
                    @foreach (var notice in Model.Notice)
                    {
                        <a href="@Url.Action("News_Detail", "Home", new { Id = notice.Id })" title="@notice.Title" target="_blank">@notice.Title</a>
                        break;
                    }
                </h2>
                @{int a = 0;}
                @foreach (var notice in Model.Notice)
                {

                    if (a > 0 && a <= 3)
                    {
                        <span class="span-l"><text>【</text></span><a class="announce-cont-sub" href="@Url.Action("News_Detail", "Home", new { Id = notice.Id })" title="@notice.Title  -  @notice.Time.ToShortDateString()" target="_blank">@notice.Title</a><span class="span-r"><text>】</text></span>
                    }
                    if (a > 3) { break; }
                    a++;
                }
            </div>
        </div><!--content end-->
        <div class="content clearfix">
            <div class="slideContainer float-left">
                <div id="slideBox" class="slideBox">
                    <ul class="items">
          
                        @foreach (var imgArtcle in Model.ImgArtcle)
                        {
                                <li>
                                    <a href="@Url.Action("News_Detail", "Home", new { Id = imgArtcle.Id })" target="_blank" title='@imgArtcle.Title'>
                                        <img src="@imgArtcle.Thumbnail">
                                    </a>
                                </li>     
                        }
                    </ul>
                </div>
            </div>
            <!-- slideContainer end-->
            <div class="article-mod article-mod-pub">
                <div class="article-mod-t t-underline clearfix">
                    <div class=""></div>
                    <h3><a href="@Url.Action("News_Page")">&nbsp;公示公告&nbsp;</a></h3><h4 class="t-pub"><a href="@Url.Action("News_Page")"><em>P</em>ublic Proclamation</a></h4>
                </div>
                <div class="article-list">
                    <ul>
  
                        @foreach (var notice in Model.Notice)
                        {
           
                            <li><a href="@Url.Action("News_Detail", "Home", new { Id = notice.Id })" target="_blank" title="@notice.Title">@notice.Title</a><span>[@notice.Time.ToShortDateString()]</span></li>
     
                        }
                    </ul>
                </div>
            </div><!--article-mod end-->
        </div><!--content end-->
        <div class="content clearfix">
            <div class="shortcut float-left">
                <img src="~/img/icon/shortcutlogo.png" />
                <ul class="li-float">
                    <li class="shortcuticon shortcuticon-download"><a class="downloadM_btn" id="downloadM_btn" href="@Url.Action("Material_Download", "Home")" target="_blank">资料下载</a></li>
                    <li class="shortcuticon shortcuticon-jysy"><a class="syjy" href="@Url.Action("Guidance", "Home", new { id = "jysy" })" title="就业失业登记" target="_blank">就业失业登记</a></li>
