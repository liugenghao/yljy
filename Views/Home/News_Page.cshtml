@model Webdiyer.WebControls.Mvc.PagedList<Ys.Model.Model.Home.Article>

@using Webdiyer.WebControls.Mvc;

<div class="wrap clearfix">
    <div class="main clearfix">
        <div class="news-list-title">
            <h3 class="edge_round_l_r_t actived">
                <img src="~/img/icon/annouce.png" />公示公告
            </h3>
            <h3><a href="@Url.Action("News_Page2", "Home")">新闻资讯</a></h3>
        </div>
        <div class="news-list-content">
            <ul>
                @foreach (var artice in Model)
                {
                    <li><a class="tit" href="@Url.Action("News_Detail", "Home", new { id = artice.Id })" title="@artice.Title" target="_blank">@artice.Title</a><span>@artice.Time.ToShortDateString()</span></li>
                }
            </ul>
        </div>
        <div class="news-list-pagebar pagebar clearfix">
            @*<div class="left holder">
                    <label>每页</label>
                    @Html.DropDownList("listCount", ViewBag.ListCountSL as SelectList, new {@class="listCount" })
                    <label>条记录</label>
                </div>*@
            <div class="pagelist">

                @if (Model != null)
                {
                    @Html.Pager(Model, new PagerOptions
               {
                   PageIndexParameterName = "id",

                   ShowPrevNext = true,
                   FirstPageText = "首页  ",
                   PrevPageText = "  上一页  ",
                   NextPageText = "  下一页  ",
                   LastPageText = "  末页  ",
                   PageIndexBoxId = "",
                   ShowNumericPagerItems = true,
                   PageNumberFormatString = "  {0}  ",
                   DisabledPagerItemTemplate = "<span class='disabled'>{0}</span>",
                   CurrentPagerItemTemplate = "<a class=\"actived\"href=\"#\">{0}</a>",
                   //DisabledPagerItemTemplate = "<a class=\"disabled\">{0}</a>"
               })
                }
            </div>
        </div>

    </div>
</div>
<script type="text/javascript">
    pageFlag = "news_page";

    $(document).ready(function (e) {

    });
</script>

