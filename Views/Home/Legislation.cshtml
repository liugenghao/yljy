<script type="text/javascript">
    pageFlag = "legislation";
    function showResult(data) {
        $('#legislation-search-result').find("ul > li").remove();
        for (var d in data) {
            var id = data[d].Id;
            var title = data[d].Title;
            var time = data[d].Time;
            $('#legislation-search-result ul').append('<li><a target="_blank" href="@Url.Action("Lesgislation_Detail")' + "/" + id + '" title="' + title + '">' + title + '</a><span>发布时间：' + time + '</span></li>');
        }

        $('#legislation-search-result').stop().animate({ 'right': '5px' }, 500, function () {
            $('#legislation_right').hide();
        });
    }
    $(document).ready(function (e) {
        $('.pageLogTit').animate({ top: '50px' }, 600, function () { });
        $('#search').on('click', function () {
            showResult();
        });
        $('#quitSearch').on('click', function () {
            $('#legislation_right').show();
            $('#legislation-search-result').stop().animate({ 'right': '-690px' }, 500, function () {
            });
        });
        $('#reset').on('click', function () {
            $('#searchCon').val('');
            $('#legislation_right').show();
            $('#legislation-search-result').stop().animate({ 'right': '-690px' }, 500, function () {
            });
        });
    });
</script>
