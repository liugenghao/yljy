@model List<Ys.Model.Model.Home.Article>
@if(Model.Count>0){
<div class="current-position">
    <img src="~/img/icon/position.png" /><div class="subpage-nav"><span><a href="@Url.Action("Index")">首页</a></span>&nbsp;>&nbsp;<span><a href="@Url.Action("Direct")">创业就业服务</a></span>&nbsp;>&nbsp;<span>@Model[0].Title</span></div>
</div>
<div class="wrap clearfix">
    <article class="article-entity">
        <div class="article-title">
            <h2>@Model[0].Title</h2>
            <div class="sub-title">@Model[0].SubTitle</div>
            <span class="news-date">更新时间：@Model[0].Time.ToShortDateString()</span><span class="news-author">作者：@(Model[0].Author == null ? "夷陵信息就业网" : Model[0].Author)</span>@*<span>字号：<a href="javascript:big_c()">[大]</a> <a href="javascript:mid_c()">[中]</a> <a href="javascript:sm_c()">[小]</a></span>*@
        </div>

        <div class="article-container">
            <div class="news-text">
                @Html.Raw(Model[0].Content)
            </div>
        </div>
    </article>
</div>
}else{
    <div class="wrap clearfix">
        <div class="article-container">
            <div class="news-text">
                待更新
            </div>
        </div>
    </div>
}
<!--wrap end-->

<script type="text/javascript">
    pageFlag = "direct";

    $("#side_nav li").click(function () {
        $("#side_nav li").removeClass("selected").eq($(this).index()).addClass("selected");
        $("#guidance_con .con").hide().eq($(this).index()).show();
        $("#guidance_con #tit").text($(this).text());
    });
</script>
