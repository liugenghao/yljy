@model Ys.Model.Model.Home.Article

@{
    ViewBag.Title = "Article_Detail";
    Layout = "~/Views/Shared/_LayoutRecruitment.cshtml";
}
<!--主体区域-->
<div class="main-wrap" id="main">
    <div class="section white clearfix">
        <div class="ht_20"></div>
       	<div class="result-wrap">
            <!--导航栏-->
            <div class="location breadcrumb">
                <a href="/or/index.html" class="home"><i></i><span>返回首页</span></a>
                <a href="index.html"><span>资讯</span></a> 
                <i class="arrow"></i><span>正文</span>
            </div>
            <!--/导航栏-->
            <!--当前栏目-->
            <div class="result-records">
                <div class="ls_rows">
                    <ul class="clearfix">
                        <li class="current-title text-overflow" style="float: none;"><i></i><label>@Model.Title</label></li>
                    </ul>
                    <div class=" ht_5 defcaption"></div>
                </div>
            </div>
            <!--/当前栏目-->
            <!--内容-->
            <div class="clear result-list">
                <div class="ht_10"></div>
                <div class="view-article">
                    <div class="article-title">
                        <h2>@Model.Title</h2>
                        <h4 class="subtitle"></h4>
                    </div>
                    <div class="article-attributes">
                        <span>发布日期：<label id="lblCreateTime">@Model.Time.ToString("yyyy-MM-dd")</label></span>
                        <span>作者：<label id="lblAuthor">@Model.Author</label></span>
                        <span>来源：<label id="lblFromSource">原创</label></span>
                        <span class="zoomFontSize">字号：<a href="javascript:doZoomFont(12);">小</a><a href="javascript:doZoomFont(14);" style="font-size: 14px;">中</a><a href="javascript:doZoomFont(16);" style="font-size: 16px;">大</a></span>
                    </div>

                    <div class="article-text" id="article-text">
                        @Html.Raw(Model.Content)
                    </div>
                    <div class="text-end"><p>（完）</p></div>
                </div>
            </div>
        </div>
    </div>
</div>    
<!--/主体区域-->
