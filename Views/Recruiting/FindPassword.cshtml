@{
    ViewBag.Title = "找回密码";
    Layout = "~/Views/Shared/_LayoutRecruitment.cshtml";
}
<!--主体区域-->
<div class="main-wrap" id="main">
    <div class="section white clearfix">
        <div class="ht_20"></div>
       	<div class="result-wrap">
            <!--导航栏-->
            <div class="location breadcrumb">
                <a href="javascript: history.back(-1);" class="home"><i></i><span>返回上一页</span></a>
                <a href="@Url.Action("FindPassword", "Recruiting")"><span>忘记密码</span></a> 
                <i class="arrow"></i><span>找回密码</span>
            </div>
            <!--/导航栏-->
            <!--内容-->
            <div class="clear result-list">
                <div class="ht_10"></div>
                <div class="view-article">
                    @using (Html.BeginForm("FindPassword", null, FormMethod.Post, new { @id = "form1" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("Id", "")
                        <div class="content-tab-wrap">
                            <div class="content-tab">
                                <div class="content-tab-ul-wrap">
                                    <ul>
                                        <li><a class="triclick selected" href="javascript:void(0);">找回密码</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="tab-content higher">    
                            <dl>
                                <dt>手机号：</dt>
                                <dd>
                                    <input type="text" name="phoneNum" id="phoneNum" class="input normal" placeholder="手机号" datatype = "m", errormsg = "请输入正确的手机号码"/>
                                </dd>
                            </dl>
                            <dl>
                                <dt>验证码：</dt>
                                <dd>                                    
                                    <input type="text" maxlength="6" name="code" id="val" class="input normal" style="width: 128px;" datatype = "n6-6" nullmsg="请输入6位验证码" errormsg="请输入6位验证码" />
                                    <input type="button" class="btn green code" id="btnSendCode" value="获取验证码" />
                                </dd>
                            </dl>
                            <dl>
                                <dd>
                                    <div class="ht_20"></div>
                                    <input type="submit" name="btnSubmit" id="btnSubmit" value="确认提交" class="btn" />
                                    <input type="button" name="btnReturn" id="btnReturn" value="返回上一页" class="btn yellow" onclick="javascript: history.back(-1);" />
                                </dd>
                            </dl>
                        </div>
                    }
                </div>
                <div class="ht_20"></div>
            </div>
        </div>
    </div>
</div>
<!-- Recommended script positioning -->
@Scripts.Render("~/Areas/Recruiting/User/Content/js/common")
<script type="text/ecmascript">
    /* document.ready */
    $(function () {
        /*初始化表单验证*/
        $("#form1").initValidform();

        /*发送手机验证码*/
        $("#btnSendCode").click(function () {
            sendCode($(this));
        });
    });

    /*发送验证码*/
    var InterValObj; //timer变量，控制时间
    var count = 60; //间隔函数，1秒执行
    var curCount;//当前剩余秒数

    function sendCode(obj) {
        curCount = count;
        /*设置button效果，开始计时*/
        $(obj).val(curCount + "秒再获取");
        InterValObj = window.setInterval(SetRemainTime, 1000); //启动计时器，1秒执行一次
        /*向后台发送处理数据*/
        $.ajax({
            type: "POST",
            url: '@Url.Action("SendCode")',
            dataType: 'json',
            data: { "phone": $("#phoneNum").val() },
            success: function (data, textStatus) {
                $(obj).attr("disabled", "disabled").addClass("disabled");

            },
            error: function (msg, testStatus) {

            }
        });
    }

    /*timer处理函数*/
    function SetRemainTime() {
        if (curCount == 0) {
            window.clearInterval(InterValObj);//停止计时器
            $("#btnSendCode").removeAttr("disabled").removeClass("disabled");//启用按钮
            $("#btnSendCode").val("重新发送验证码");
            $("#validCode").val(""); //清除验证码。如果不清除，过时间后，输入收到的验证码依然有效    
        }
        else {
            curCount--;
            $("#btnSendCode").val(+curCount + "秒再获取");
        }
    }
</script>

