<script type="text/javascript">
    pageFlag = "recruiting";
    // JavaScript Document
    $(function () {
        f_onLoadBanner();

        var jobsTypesList = $(".jobs-by-type").find(".content-tab ul li");
        var mHeight = 0;
        $(jobsTypesList).each(function () {
            mHeight += $(this).height();
        });
        $(".jobs-by-type").find(".content-tab").height(mHeight);
        $(".jobs-by-type").find("ul li a").eq(0).trigger("click");

        $("#btnSearchJob").click(function () {
            window.location.href = '@Url.Action("Jobs", "Recruiting")' + '?txtKeyword=' + $("#kwJob").val();

        });
        $("#btnSearchEmployer").click(function () {
            window.location.href = '@Url.Action("Companies", "Recruiting")' + '?txtKeyword=' + $("#kwEmployer").val();

        });

    });

    // 移除或重置某些默认样式或元素
    function f_onResetIndexElements() {
        //首页链接设置为打开新窗口或新选项卡
        //$("#main a").attr("target", "_blank");
    }

    //实例化焦点图
    function f_onLoadBanner() {
        //右侧回顶特效
        $('#asid_scroll').hhShare({
            cenBox: 'asid_share_box',  //里边的小层
            icon: 'adid_icon',
            addClass: 'red_bag',
            titleClass: 'asid_title',
            triangle: 'asid_share_triangle', //鼠标划过显示图层，边上的小三角
            showBox: 'asid_sha_layer' //鼠标划过显示图层
        });
        var arr = [$("#go-jobs"), $("#go-companies")];
        $(arr).each(function () { $(this).show(); });
    }
</script>
