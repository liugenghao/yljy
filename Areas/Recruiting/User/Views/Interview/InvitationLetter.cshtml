                                        <label for="listJobTag_9">餐补</label>
                                        <input type="checkbox" name="chkSingle" class="checkall" id="listJobTag_10" value="10" />
                                        <label for="listJobTag_10">房补</label>
                                        <input type="checkbox" name="chkSingle" class="checkall" id="listJobTag_11" value="11" />
                                        <label for="listJobTag_11">通讯补贴</label>
                                    </span>
                                </div>
                                </dd>
                            </dl>
                            <dl class="clearfix">
                                <dt>职位要求</dt>
                                <dd>
                                    <div class="rule-multi-porp">
                                        <span id="checkboxList2" style="display: none;">
                                            <input type="checkbox" name="chkSingle" class="checkall" id="listJobLimit_1" value="1" />
                                            <label for="listJobLimit_1">不限工作经验</label>
                                            <input type="checkbox" name="chkSingle" class="checkall" id="listJobLimit_2" value="2" />
