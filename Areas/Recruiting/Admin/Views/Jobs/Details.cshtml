@model Ys.Model.Model.Recruit.JobModel

@{
    ViewBag.Title = "职位详细";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <title>职位详细</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="shoucut icon" href="~/favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Areas/Recruiting/Admin/Content/css/common")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Areas/Recruiting/Admin/Content/js/common")
</head>
<body>
    <!--main-->
    <div class="main-wrap clearfix">
        <!--导航栏-->
        <div class="crumb-wrap">
            <div class="crumb-list">
                <a href="javascript:window.parent.linkMenuTree(true, 'sysDefaultHome');"><i class="icon icon-home"></i>首页</a>
                <span class="crumb-step">&gt;</span><a href="@Url.Action("Index")">企业职位</a>
                <span class="crumb-step">&gt;</span><span>职位详细</span>
            </div>
        </div>
        <!--导航栏-->
        <div class="result-wrap" id="result-detail">
            <!--内容-->
            <div id="floatHead" class="content-tab-wrap">
                <div class="content-tab">
                    <div class="content-tab-ul-wrap">
                        <ul>
                            <li><a class="selected" href="javascript:void(0);">职位信息</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <dl>
                    <dt>职位名称</dt>
                    <dd>
                        <label>@Model.JobName</label>
                    </dd>
                </dl>
                <dl>
                    <dt>企业名称</dt>
                    <dd>
                        <label>@Model.Employer.Name</label>
                    </dd>
                </dl>
                <dl>
                    <dt>发布时间</dt>
                    <dd>
                        <label>@Model.PublishTime.ToShortDateString()</label>
                    </dd>
                </dl>
                <dl>
                    <dt>招聘亮点</dt>
                    <dd class="article-features">
                        @foreach (var sign in Model.JobSign)
                        {
                             <span>@sign.Content</span>
                        }
                    </dd>
                </dl>
                <dl>
                    <dt>职位要求</dt>
                    <dd class="article-features">
                        <span>@Model.WorkYear.WorkedYear 工作经验</span>
                        <span>@Model.WorkAttr.Name</span>
                    </dd>
                </dl>
                <dl>
                    <dt>职位详情</dt>
                    <dd>
                        <p>岗位职责:<br>
                            @Html.Raw( Model.Others)
                        </p>
                    </dd>
                </dl>
            </div>
            <!--/内容-->
            <!--工具栏-->
            <div class="page-footer">
                <div class="btn-wrap">
                    <input type="button" name="btnReturn" id="btnRedrectToEdit" value="返回上一页" class="btn yellow" onclick="javascript: history.back(-1);" />
                    <input type="hidden" name="hiddenId" id="hiddenId" Value="0" />
                </div>
            </div>
            <!--/工具栏-->
        </div>
    </div>
    <!--/main-->
    <!-- Recommended script positioning -->
    @Scripts.Render("~/Recruiting/Admin/js/layoutMain")
    <script type="text/javascript">
        window.onload = function () {
            var api = top.dialog.get(window); //获取窗体对象
            if (api) {
                $(".crumb-wrap").hide();
                $(".page-footer").hide();
                var iframe = window.parent.document.getElementsByName(api.id)[0];
                iframe.style.height = document.body.scrollHeight + "px";
            }
        }
    </script>
</body>
</html>
